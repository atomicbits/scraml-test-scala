{
  "$schema": "http://json-schema.org/draft-03/schema",
  "id": "http://atomicbits.io/raml10/zoo.json",
  "type": "object",
  "description": "a zoo",
  "properties": {
    "name": {
      "required": true,
      "type": "string"
    },
    "animals": {
      "type": "array",
      "items": {
        "$ref": "animal.json"
      }
    },
    "visitors": {
      "$ref": "http://atomicbits.io/raml10/paged-list.json#",
      "genericTypes": [
        {
          "$ref": "http://atomicbits.io/raml10/user.json"
        },
        {
          "type": "integer"
        }
      ]
    }
  }
}
